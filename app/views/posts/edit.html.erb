<div class="edit-container">
  <h1>Edit Post</h1>

  <%= form_with model: @post, url: post_path(@post), method: :patch, local: true do |form| %>
    
    <div class="form-group">
      <%= form.label :title, "Title", class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :content, "Content", class: "form-label" %>
      <%= form.text_area :content, class: "form-control", rows: 5 %>
    </div>

    <!-- Image Upload -->
    <div class="post-input-box">
      <%= form.label :image, "Upload Image", class: "upload-label" %>
      <%= form.file_field :image, class: "upload-button" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Update Post", class: "btn-primary" %>
    </div>

  <% end %>
</div>